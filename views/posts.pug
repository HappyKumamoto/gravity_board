doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    title ひみつの掲示板
    style.
      *{
          text-align: center;
          writing-mode: vertical-rl;
          background-color: #669900;
          color: #DDDDDD;
          }
      /*tategaki{
        text-orientation: upright;
      }*/

     
  body
     h1 ひみつの掲示板
     a(href="/logout") ログアウト
     h2 新しい投稿
     form(method="post" action="/posts")
       div
        textarea(name="content" cols=20 rows=20)
       div
        button(type="submit") 発
       h2 投稿一覧
       each content in contents
        p #{content}
        hr
